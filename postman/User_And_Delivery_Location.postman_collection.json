									"    pm.expect(jsonData).to.have.property('order_id');",
									"    pm.expect(jsonData).to.have.property('order_status');",
									"    pm.expect(jsonData).to.have.property('current_location');",
									"    pm.expect(jsonData).to.have.property('location_history');",
									"});",
									"",
									"pm.test(\"Current location has coordinates\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.current_location) {",
									"        pm.expect(jsonData.current_location).to.have.property('latitude');",
									"        pm.expect(jsonData.current_location).to.have.property('longitude');",
									"    }",
									"});"
								],
